<div class="container">
  <%= form_tag(movies_path, method: "get") do %>
    <%= label_tag(:actor, "Search by actor name:") %>
    <%= text_field_tag(:actor) %>
    <%= submit_tag("Search") %>
  <% end %><br>

  <%= form_tag(movies_path, method: "get") do %>
    <select name="sort_by_average_stars">
      <option value="false">Sort By All</option>
      <option value="true" <%= 'selected' if params[:sort_by_average_stars] == 'true' %>>Sort By Average Stars</option>
    </select>
    <%= submit_tag("Filter") %>
  <% end %>

  <h2>Movies List</h2>
  <table border="1">
    <thead>
      <tr>
        <th>Movie</th>
        <th>Description</th>
        <th>Year</th>
        <th>Director</th>
        <th>Actor</th>
        <th>Filming location</th>
        <th>Country</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.name %></td>
          <td><%= movie.description %></td>
          <td><%= movie.year %></td>
          <td><%= movie.director %></td>
          <td><%= movie.actor %></td>
          <td><%= movie.filming_location %></td>
          <td><%= movie.country %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
